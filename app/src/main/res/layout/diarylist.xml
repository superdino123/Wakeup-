<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/item_selector"
        >
        <include layout="@layout/common_title_layout" />
        <LinearLayout
            android:background="@color/common_title_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_middle"
                android:paddingRight="@dimen/space_middle"
                android:textColor="@android:color/white"
                android:text="@string/header_text"
                android:textStyle="normal"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"/>
            <TextView
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_middle"
                android:paddingRight="@dimen/space_middle"
                android:textColor="@android:color/white"
                android:text="@string/header_text2"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">
            <TextView
                android:layout_width="130dp"
                android:gravity="center_vertical"
                android:layout_height="40dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:text="@string/diary_time"
                android:textColor="#000"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:text="@string/diary_title"
                android:textColor="#000"/>
        </LinearLayout>

        <ListView
            android:id="@+id/listdiary"
            android:background="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="240dip"
            android:divider="@color/text_press2"

            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:dividerHeight="1dip"
            />
        <RelativeLayout
            android:id="@+id/composer_buttons_show_hide_button"
            android:layout_width="50dp"
            android:layout_height="47.33333333333333dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">


            <Button
                android:id="@+id/btn_insert"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:text="@string/diary_insert_icon"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_menu_selector" />

        </RelativeLayout>


    </LinearLayout>